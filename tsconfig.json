{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "packages/*/src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/**/*"]
}
